# FeedbackResolver Environment Configuration
# Copy this to .env and fill in your actual values

# =============================================================================
# GMAIL OAUTH CREDENTIALS (Required for Gmail mode)
# =============================================================================
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID="your-google-oauth-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret-here"

# =============================================================================
# AI PROVIDER CONFIGURATION (Required)
# =============================================================================
# Choose ONE provider: vertex, azure, bedrock, anthropic, openai
NEUROLINK_DEFAULT_PROVIDER="azure"

# Optional: Specify model name (provider-specific)
# NEUROLINK_DEFAULT_MODEL="gpt-4"

# -----------------------------------------------------------------------------
# Vertex AI (Google Cloud)
# -----------------------------------------------------------------------------
# GOOGLE_VERTEX_PROJECT="your-google-cloud-project-id"
# GOOGLE_VERTEX_LOCATION="us-central1"
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# -----------------------------------------------------------------------------
# Azure OpenAI
# -----------------------------------------------------------------------------
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com"
# AZURE_OPENAI_DEPLOYMENT="gpt-4"

# -----------------------------------------------------------------------------
# AWS Bedrock
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# BEDROCK_MODEL_ID="anthropic.claude-v2"

# -----------------------------------------------------------------------------
# Anthropic
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY="your-anthropic-api-key"

# -----------------------------------------------------------------------------
# OpenAI
# -----------------------------------------------------------------------------
# OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# EMAIL PROCESSING CONFIGURATION (Optional)
# =============================================================================
# FeedbackResolver mode: gmail, file, test
FEEDBACK_RESOLVER_MODE="gmail"

# Target email to monitor (leave empty for all emails)
TARGET_EMAIL="support@yourcompany.com"

# How many days back to search for emails
DAYS_TO_SEARCH="10"

# Maximum number of emails to process per run
MAX_RESULTS="20"

# =============================================================================
# SLACK INTEGRATION (Optional)
# =============================================================================
# Enable Slack notifications
SLACK_ENABLED="true"

# Slack webhook URL - get this from your Slack app:
# 1. Create a Slack app: https://api.slack.com/apps
# 2. Add incoming webhooks
# 3. Copy the webhook URL
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# =============================================================================
# FILE OUTPUT CONFIGURATION (Optional)
# =============================================================================
# Enable file output
FILE_ENABLED="true"

# Path where to save analysis reports
FILE_OUTPUT_PATH="./feedback-analysis-report.md"

# =============================================================================
# AUTO-REPLY CONFIGURATION (Optional - Gmail mode only)
# =============================================================================
# Enable automated email replies
AUTO_REPLY_ENABLED="false"

# Require user approval before sending replies (true = interactive prompts, false = auto-send)
AUTO_REPLY_REQUIRE_APPROVAL="true"

# Minimum confidence threshold for auto-approving replies (0.0 to 1.0)
# Only used when AUTO_REPLY_REQUIRE_APPROVAL=false
AUTO_REPLY_CONFIDENCE_THRESHOLD="0.7"

# Maximum number of replies to send per run (safety limit)
AUTO_REPLY_MAX_PER_RUN="10"

# =============================================================================
# DEVELOPMENT & DEBUGGING (Optional)
# =============================================================================
# Set log level for debugging
# LOG_LEVEL="info"

# Enable debug mode
# DEBUG="feedback-resolver:*"
